<li class="span4">
  <div class="thumbnail">
    <%= link_to gallery_photo_path(photo.gallery, photo) do %>
        <%= image_tag photo.image.url(:thumb) %>
    <% end %>
    <div class="caption">
      <h3>
        <%= link_to photo.title, gallery_photo_path(photo.gallery, photo) %>
      </h3>
      <% if is_admin? %>
          <p>
            <%= link_to "Edit", edit_gallery_photo_path(photo.gallery, photo), class: "btn btn-primary btn-mini" %>
            <%= link_to "Delete", gallery_photo_path(photo.gallery, photo), method: :delete,
                        data: { confirm: "Delete #{photo.title}?" }, class: "btn btn-mini" %>
          </p>
      <% end %>
    </div>
  </div>
</li>