<li class="span4">
  <div class="thumbnail">
    <%= link_to gallery do %>
      <!--<img src="http://placekitten.com/g/<%= rand(800..1024) %>/<%= rand(600..768) %>"/>-->
      <!--<img src="http://placekitten.com/g/<%= [1024, 800].sample %>/<%= [768, 600].sample %>"/>-->
      <img src="http://placekitten.com/g/800/600"/>
    <% end %>
    <div class="caption">
      <h3>
        <%= link_to gallery.title, gallery %>
      </h3>
      <!--<p><%= gallery.description %></p>-->
      <% if is_admin? %>
          <p>
            <%= link_to "Edit", edit_gallery_path(gallery), class: "btn btn-primary btn-mini" %>
            <a class="btn btn-mini" href="#">Delete</a>
          </p>
      <% end %>
    </div>
  </div>
</li>