<% provide(:title, @gallery.title) %>

<h1><%= @gallery.title %></h1>
<p><%= @gallery.description %></p>

<% if is_admin? %>
    <h3>
      <%= link_to "Add Photo", new_gallery_photo_path(@gallery), class: "btn btn-primary" %>
    </h3>
<% end %>

<ul class="thumbnails">
  <%= render @photos %>
</ul>

<%= will_paginate @photos %>